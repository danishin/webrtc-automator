<configuration>
  <!-- Appenders -->
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>[%logger{50}]: %message%n%xException{10}</pattern>
    </encoder>
  </appender>

  <!-- Loggers -->
  <root level="WARN">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>